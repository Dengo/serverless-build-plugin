{
  "compilerOptions": {
    "target": "es2015",
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "./dist",
    "declaration": true,
    "allowSyntheticDefaultImports": true,
    "noUnusedLocals": true,
    "lib": [
      "es2015",
      "es2016",
      "es2017"
    ],
    "pretty": false,
    "sourceMap": true
  },
  "exclude": [
    "node_modules"
  ],
  "include": [
    "src/**/*"
  ]
}
